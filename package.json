{
  "name": "app",
  "version": "1.0.0",
  "description": "Skeleton application",
  "main": "app.js",
  "author": "CLICK CODE Mateusz DÄ…browski",
  "license": "ISC",
  "scripts": {
    "start": "NODE_ENV=production node .",
    "start:debug": "LOG_LEVEL=debug NODE_ENV=development node . | ./node_modules/.bin/pino-pretty",
    "start:web": "cd ./app && npm run start",
    "clean-server": "rimraf build/server/*",
    "clean-all": "rimraf build/* && rimraf public",
    "copy-server-to-prod": "rm -fr public && mkdir public && cp -R build/web/* public",
    "copy-translation-to-build": "cp -R server/locales build/server",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "eslint-server": "eslint \"./server/**/*.ts\"",
    "eslint-server-fix": "eslint \"./server/**/*.ts\" --fix",
    "eslint-app": "cd ./app && npm run eslint",
    "eslint-app-fix": "cd ./app && npm run eslint-fix",
    "tsc": "tsc",
    "build-web": "cd ./app && npm run build",
    "build-server": "npm run clean-server && tsc && tscpaths -p tsconfig.json -s ./server -o ./build/server/ && npm run copy-translation-to-build",
    "build-app": "npm-run-all clean-all build-server build-web",
    "build-app:prod": "npm-run-all clean-all build-server eslint-server-fix test:coverage build-web copy-server-to-prod",
    "web-watch": "onchange 'app/src/**' -- npm run build-web",
    "server-watch": "nodemon -w server/ -e ts --exec npm-run-all build-server start:debug",
    "app-server-watch": "npm-run-all build-web server-watch",
    "app-watch": "npm run build-web && concurrently \"npm run web-watch\" \"npm run server-watch\"",
    "test-app": "npm-run-all test-frontend test",
    "test-frontend": "cd ./app && npm run test",
    "test": "jest --config ./jest.config.ts --testPathPattern=./server",
    "test:coverage": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm-run-all eslint-app eslint-server test"
    }
  },
  "dependencies": {
    "@types/mongodb": "^3.6.3",
    "@types/mongoose": "^5.10.3",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-pino-logger": "^6.0.0",
    "i18next": "^20.1.0",
    "i18next-http-backend": "^1.2.1",
    "mongodb": "^3.6.3",
    "mongoose": "^5.11.9",
    "onchange": "^7.1.0",
    "pino": "^6.11.0",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-express": "^4.1.6",
    "tscpaths": "0.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/express-pino-logger": "^4.0.2",
    "@types/fs-extra": "^9.0.5",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.12",
    "@types/pino": "^6.3.5",
    "@types/shelljs": "^0.8.8",
    "@types/swagger-jsdoc": "^3.0.2",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^4.4.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3"
  }
}
