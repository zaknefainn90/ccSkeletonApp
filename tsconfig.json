{
  "compilerOptions":{
     "target":"es6",
     "module":"commonjs",
     "allowJs":true,
     "sourceMap":true,
     "outDir":"./build/server",
     "strict":true,
     "noImplicitAny":true,
     "moduleResolution":"node",
     "baseUrl":"./",
     "paths":{
         "@server/*":[
            "server/*"
         ],
        "@components/*":[
           "server/components/*"
        ],
        "@routes/*":[
           "server/routes/*"
        ],
        "@utils/*":[
           "server/utils/*"
        ],
        "@dataTypes/*":[
            "server/dataTypes/*"
         ]
     },
     "esModuleInterop":true,
     "skipLibCheck":true,
     "forceConsistentCasingInFileNames":true
  },
  "include":[
     "**/server/**/*"
  ],
  "exclude":[
     "**/node_modules/*"
  ]
}